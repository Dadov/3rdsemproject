<Window x:Class="ElectricCarGUI.AddBatteryTypeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddBatteryTypeWindow" Height="300" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <ComboBox x:Name="cbbBT" HorizontalAlignment="Left" Margin="124,65,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="BatteryType: " HorizontalAlignment="Left" Margin="31,61,0,0" VerticalAlignment="Top" Width="76"/>
        <Label Content="Quantity: " HorizontalAlignment="Left" Margin="31,92,0,0" VerticalAlignment="Top" Width="76"/>
        <ComboBox x:Name="cbbQuantity" HorizontalAlignment="Left" Margin="124,96,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnOK" Content="OK" HorizontalAlignment="Left" Margin="62,174,0,0" VerticalAlignment="Top" Width="75" Click="btnOK_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="164,174,0,0" VerticalAlignment="Top" Width="75" Click="btnCancel_Click"/>
        <Label Content="Please select battery type and quantity: " HorizontalAlignment="Left" Margin="31,10,0,0" VerticalAlignment="Top" Width="228"/>

    </Grid>
</Window>
