<Window x:Class="ElectricCarGUI.AddRouoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddRouoteWindow" Height="500" Width="700" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,-8,-21">
        <Label Content="Please select a route and press add button:" HorizontalAlignment="Left" Margin="65,33,0,0" VerticalAlignment="Top" Width="248"/>

        <Label Content="Sorted by: " HorizontalAlignment="Left" Margin="397,33,0,0" VerticalAlignment="Top" Width="68"/>
        <ComboBox x:Name="cbbSort" HorizontalAlignment="Left" Margin="470,37,0,0" VerticalAlignment="Top" Width="120"/>
        <ListBox HorizontalAlignment="Left" Height="305" Margin="33,79,0,0" VerticalAlignment="Top" Width="629"/>
        <Button x:Name="btnAdd" Content="Add" HorizontalAlignment="Left" Margin="238,410,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="359,410,0,0" VerticalAlignment="Top" Width="75" Click="btnCancel_Click"/>


    </Grid>
</Window>
